{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
  
    <div class="container colum-c justify-content-center">
    {{parent()}}
        <div class="row p-3 "> 
            
        <div class="col-md-8 justify-content-center">
            <h1 > Listado de Usuarios </h1>
        </div>
        <div class="col-md-2 justify-content-end">
            <a href="{{ path('edit_user_new') }}" class="btn btn-danger" role="button">Agregar Usuario</a>
        </div>
        
        </div>
        <div class="row p-3 ">
                    <table class="table table-striped rounded-lg" >
                        <thead class="thead-dark">
                            <tr>
                                <th>Id</th>
                                <th>Username</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Dni</th>
                                <th>Direccion</th>
                                <th>Email</th>
                                <th>CantidadMascotas</th>
                                <th>Telefono</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.nombre }}</td>
                                <td>{{ user.apellido }}</td>
                                <td>{{ user.dni }}</td>
                                <td>{{ user.direccion }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.cantidadMascotas }}</td>
                                <td>{{ user.telefono }}</td>
                                <td>
                                    <a href="{{ path('edit_user_show', {'id': user.id}) }}" class="btn btn-danger" role="button">Ver</a>
                                    <a href="{{ path('edit_user_edit', {'id': user.id}) }}" class="btn btn-danger" role="button">Modificar</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="13">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
         </div>
        <div class="row"> 
           
        </div>
           
            
    </div>
{% endblock %}

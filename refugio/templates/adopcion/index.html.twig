{% extends 'base.html.twig' %}

{% block title %}Adopcion index{% endblock %}

{% block body %}

  <div class="container colum-c justify-content-center">
    {{parent()}}
        <div class="row p-3 "> 
            
        <div class="col-md-8 justify-content-center">
            <h1 > Listado de Adopciones </h1>
        </div>
        <div class="col-md-2 justify-content-end">
            <a href="{{ path('adopcion_new') }}" class="btn btn-danger" role="button">Agregar Adopcion</a>
        </div>
        
        </div>
        <div class="row p-3 ">



            <table class="table table-striped rounded-lg">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Mascota</th>
                        <th>Edad</th>
                        <th>Color</th>
                        <th>Adoptante</th>
                        <th>Fecha de Adopcion</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for adopcion in adopcions %}
                    <tr>
                        <td>{{ adopcion.id }}</td>
                        <td>{{ adopcion.mascota.nombre }}</td>
                        <td>{{ adopcion.mascota.edad }}</td>
                        <td>{{ adopcion.mascota.color }}</td>
                        <td>{{ adopcion.usuario.apellido }},{{ adopcion.usuario.nombre }}</td>
                        
                        <td>{{ adopcion.fechaAdopcion ? adopcion.fechaAdopcion|date('d-m-Y') : '' }}</td>
                        <td>
                        <a href="{{ path('edit_mascota_show', {'id': adopcion.mascota.id}) }}" class="btn btn-danger" role="button">Ver Mascota</a>
                            <a href="{{ path('adopcion_show', {'id': adopcion.id}) }} "class="btn btn-danger" role="button">Ver Adopcion</a>
                            <a href="{{ path('adopcion_edit', {'id': adopcion.id}) }} "class="btn btn-danger" role="button">Modificar</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

                     </table>
        </div>
        <div class="row"> 
           
        </div>
           
            
    </div>
{% endblock %}
